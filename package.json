{
  "name": "todomvc-react-redux-ts",
  "version": "1.0.0",
  "description": "TodoMvc with react, redux and typescript",
  "author": "Robin Van den Broeck <robin.broeck@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/enzyme": "^2.8.2",
    "@types/jest": "^20.0.2",
    "@types/react": "^15.0.37",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.46",
    "@types/webpack": "^3.0.4",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "todomvc-app-css": "^2.1.0",
    "ts-jest": "^20.0.7",
    "ts-loader": "^2.2.2",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.0.0",
    "tsutils": "^2.6.0",
    "typescript": "^2.4.1",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "bundle": "webpack -p",
    "start": "webpack-dev-server --open",
    "precommit": "lint-staged",
    "lint": "tslint src/**/*.ts src/**/*.tsx -c tslint.json --project tsconfig.json --type-check"
  },
  "lint-staged": {
    "*.{js,jsx,json}": ["prettier --write", "git add"],
    "*.{ts,tsx}": ["prettier --write", "tslint --fix", "git add"]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/build/"],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "collectCoverage": true,
    "mapCoverage": true
  }
}
